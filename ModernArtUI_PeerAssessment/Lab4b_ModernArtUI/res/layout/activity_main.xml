<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToDoManagerActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.95">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.4">
               <View
                   android:id="@+id/grayRect"
                   android:layout_width="wrap_content"
                   android:layout_height="0dp"
                   android:layout_weight="0.5"
                   android:background="@drawable/gray_rectangle"
                   />
               <View
                   android:id="@+id/magentaRect"
                   android:layout_width="wrap_content"
                   android:layout_height="0dp"
                   android:layout_weight="0.5"
                   android:background="@drawable/magenta_rectangle"
                   />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.6">
            <View
                android:id="@+id/redRect"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:background="@drawable/red_rectangle"
                />

            <View
                android:id="@+id/whiteRect"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:background="@drawable/white_rectangle" />

            <View
                android:id="@+id/yellowRect"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:background="@drawable/yellow_rectangle" />

            <View
                android:id="@+id/greenBlueRect"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:background="@drawable/blue_rectangle"
                />
        </LinearLayout>

    </LinearLayout>
    <SeekBar
        android:id="@+id/color_change_seekbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"/>

</LinearLayout>